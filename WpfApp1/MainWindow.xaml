<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Grid Height="434" Width="800">
            <Button x:Name="cal_button" Content="Calculate" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_Click" Margin="226,216,0,0"/>
            <TextBox x:Name="arg1" HorizontalAlignment="Left" Margin="102,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="arg1_TextChanged"/>
            <TextBox x:Name="arg2" HorizontalAlignment="Left" Margin="102,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="arg2_TextChanged"/>
            <TextBox x:Name="result" HorizontalAlignment="Left" Margin="199,271,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <RadioButton x:Name="radio_add" Content="Add" HorizontalAlignment="Left" Margin="299,104,0,0" VerticalAlignment="Top" IsChecked="True"/>
            <RadioButton x:Name="radio_diff" Content="Differ" HorizontalAlignment="Left" Margin="299,146,0,0" VerticalAlignment="Top"/>

        </Grid>
    </StackPanel>
</Window>
